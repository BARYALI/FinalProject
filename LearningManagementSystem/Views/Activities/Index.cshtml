@model IEnumerable<LearningManagementSystem.Models.Activity>

@{
    ViewBag.Title = "Index";
}

<br/>
<br/>

<p>
    @Html.ActionLink("Create New Activity", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Module.Course.Name)
        </th>
        <th>

            @Html.DisplayNameFor(model => model.Module.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Start_Time)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.End_Time)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Module.Course.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Module.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Start_Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.End_Time)
            </td>
            <td>
                <div id="tech">
                    @if (User.IsInRole("Teacher"))
                    {

                        <ul>
                            <li>
                                @Html.ActionLink("Edit", "Edit", new { id = item.ActivityId })
                            </li>
                            <li>
                                @Html.ActionLink("Details", "Details", new { id = item.ActivityId })
                            </li>
                            <li>
                                @Html.ActionLink("Delete", "Delete", new { id = item.ActivityId })

                            </li>
                        </ul>
                    }
                </div>
            </td>
        </tr>
    }

</table>
